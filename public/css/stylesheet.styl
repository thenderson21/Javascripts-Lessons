/*
 * Import nib
 */
@import 'nib'
@import 'nib/gradients'

body 
    background linear-gradient( top, #e5e5e5, white) fixed
    margin 0px
    font-family sans-serif
    font-size small
h1
	font-weight bold
	font-size xx-large

h2
	font-weight bold
	font-size x-large
	
h3 
	font-weight bold
	font-size large

h4 
	font-weight bold
	font-size medium

h5 
	font-weight bold
	font-size small

strong
	font-weight bold
	
.hidden 
	visibility hidden
	
header
    margin 0px
    padding 0px
    font-family fantasy

nav#top
    position absolute
    top 0
    background-color black
    color #b5b5b5
    width 100%
    height 2em
    padding-left 10px
    padding-right 10px
    margin 0px
    box-shadow 0px 0px 5px black
    font-size large
 
nav#top p  
    margin-top 7px
 
nav#top p a  
    color white
    text-decoration none
    margin-left 10px
    font-size small
 
nav#top p avisited  
    text-decorationnone
 
nav#top p a:hover 
	text-decoration underline 
	
nav#top p a:active  
	text-decoration underline 

section#wrapper
	top 50px
	width 800px
	margin-left auto
	margin-right auto
	position relative
	
#main 
    top 30px
    background-color white
    border 1px solid #d2d0d0
    border-radius 5px
    width 800px
    margin auto
    margin-top 20px
    padding 0px 15px 15px 15px

#main table 
	margin-left auto
	margin-right auto
	border-collapse collapse

#main table, th, td
	border 1px solid black

#main th 
	background-color #b5b5b5
	padding 8px

#main td
	padding 5px

.fullWidth
	width 100%

.twoColumn
	margin-top 10px
	column-count 2
	column-gap 5px

.twoColumn li
	padding-bottom 5px
	
.twoColumn li.head
	list-style-type none
	padding-bottom 5px
	margin-bottom 5px
	
.page_header h2 
	border-bottom 1px solid #d9d7d7
	margin-top 2em
	margin-bottom 1em

footer
	margin-top 15px
	margin-left auto
	margin-right auto
	text-align center

footer .copyright 
	font-size small
	margin-left auto
	margin-right auto
	margin-bottom 15px
	padding-bottom 15px
	text-align center
	
code
	background-color #e5e5e5
	
pre code
	background-color #e5e5e5
	width 90%
	margin-left auto
	margin-right auto

.results
    width 90%
    background-color #e5e5e5
    padding 10px 10px 
    border 1px solid #cccccc
    margin-left auto
    margin-right auto

.note
	width 90%
	margin-left auto
	margin-right auto
	margin-bottom 10px
	background-color #fffdd8
	padding 0 10px 10px 10px
	border-radius 5px
	
 